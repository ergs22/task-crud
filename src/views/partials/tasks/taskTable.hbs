{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>

      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          {{!propiedad index viene de #each}}
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}

              <a class="btn btn-dark" href="/task/{{_id}}/toggleDone">No hecho</a>
            {{else}}
              <a
                class="btn btn-success"
                href="/task/{{_id}}/toggleDone"
              >Hecho</a>
            {{/if}}

            <a class="btn btn-danger" href="/task/{{_id}}/edit">Editar</a>
            <a class="btn btn-info" href="/task/{{_id}}/eliminar">Eliminar</a>
          </td>

        </tr>

      {{/each}}

    </tbody>
  </table>

{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay tareas</h1>
      <img src="/icons/1490891086-10_82638.svg" class="w-75" alt="" />
    </div>
  </div>

{{/if}}